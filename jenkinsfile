pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Run Maven on a Unix-like OS
                sh 'mvn clean install'

                // If on Windows, use 'bat' instead of 'sh'
                // bat 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                // Run tests using Maven
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                // Package the app into a JAR file
                sh 'mvn package'
            }
        }

        stage('Deploy') {
            steps {
                // Example of how you might deploy the app or push to Docker
                sh 'echo Deploying...'
            }
        }
    }
}
